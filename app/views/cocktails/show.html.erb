 <div class="container"> 
  <h1><%= @cocktail.name %></h1>
  <%= link_to all cocktails "Back", root_path %>
  <br>

  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.ingredient.description %></td>
              <td>
              
              </td>

            </tr>
        </tbody>
      </table>

    </div>
  </div>


</div>
